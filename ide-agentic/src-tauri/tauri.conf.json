{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "IDE-AI",
  "version": "0.1.0",
  "identifier": "com.teomarques.ide-ai",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "IDE-AI â€” Agente Inteligente",
        "width": 1280,
        "height": 800,
        "resizable": true,
